#!/usr/bin/env bash

set -E

trap "kill 0" SIGINT

NETWORK=${NETWORK:-development}
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cyan=6; green=2; yellow=3; blue=4; pink=5;

prefix_cmd () {
    {
        eval "$3" || kill 0
    } 2>&1 | sed -e "s/\(.*\)/$(tput setaf $2)[$1] \1$(tput sgr0)/"
}

echo "Starting Ganache..."

(
    cd $DIR/../contracts
    prefix_cmd 'ganache' ${cyan} "ganache-cli -m 'candy maple cake sugar pudding cream honey rich smooth crumble sweet treat' -p 9545 --deterministic --verbose-rpc --networkId ${NETWORK} --db ../test/storage/ganache"
) &

sleep 2

echo "Migrating..."

cd $DIR/../contracts
prefix_cmd 'migrate' ${pink} 'truffle migrate --reset'

echo "Starting Plasma..."

(
    cd $DIR/..
    prefix_cmd 'plasma' ${green} "./build/plasma --config $DIR/../test/test-config.yaml start-root"
) &

sleep 3

echo "Running tests..."

(
    cd $DIR/../rpc-test-client
    prefix_cmd 'test' ${yellow} "./node_modules/.bin/mocha  -g 'should load client'"
)

wait